<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ListPreference
        android:title="@string/pref_label_units"
        android:key="@string/pref_key_units"
        android:defaultValue="@string/pref_default_units"
        android:entryValues="@array/unit_values"
        android:entries="@array/unit_options" />

    <EditTextPreference
        android:title="@string/pref_label_rest"
        android:key="@string/pref_key_rest"
        android:defaultValue="@string/pref_default_rest"
        android:inputType="number" />

</PreferenceScreen>
